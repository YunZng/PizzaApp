@page
@model InviteUserModel
@{
    ViewData["Title"] = "Invite User";
}

<partial name="_StatusMessage" model="Model.StatusMessage" class="@Model.DisplayStatus"/>
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="inviteForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Invite a new user.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <select asp-for="Input.Role" asp-items="Model.Roles" class="form-select"></select>
                <label asp-for="Input.Role">Role</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true"
                    placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Send Invite</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
